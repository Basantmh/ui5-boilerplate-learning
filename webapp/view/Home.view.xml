<mvc:View xmlns:tnt="sap.tnt"
  controllerName="ui5boilerplate.controller.Home"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core">
  <Page showHeader="true"
    title="Library Management System"
    titleAlignment="Center"
    floatingFooter="false"
    titleLevel="Auto">
    <content>
      <Text text="Create Membership"
        textAlign="Center"
        width="100%" />

      <FlexBox direction="Column">
        <Label text="Name"
          labelFor="input_name"
          design="Bold" />
        <Input id="input_name"
          maxLength="128"
          type="Text"
          width="350px"
          required="true" />
      </FlexBox>
      <FlexBox direction="Column">
        <Label text="Mail ID"
          design="Bold" />
        <Input type="Email"
          width="350px" />
      </FlexBox>
      <FlexBox direction="Column">
        <Label text="Resident Type"
          design="Bold" />
        <RadioButtonGroup fieldGroupIds="resident_type">
          <RadioButton text="Hosteller"
            groupName="resident_type"
            selected="true" />
          <RadioButton text="Non-Hosteller"
            groupName="resident_type" />
        </RadioButtonGroup>
      </FlexBox>
      <FlexBox direction="Column">
        <Label text="Interest"
          design="Bold" />
        <CheckBox text="Fiction" />
        <CheckBox text="Non-Fiction" />
      </FlexBox>
      <FlexBox direction="Column">
        <Label text="Course"
          design="Bold" />
        <ComboBox items="{ path: 'CourseModel>/CourseList'}">
          <!--Binding for named model, if model is not named then use "course" for relative path-->
          <core:Item text="{CourseModel>course}" />
        </ComboBox>
      </FlexBox>
    </content>
    <footer>
      <Toolbar>
        <!--added just for understanding-->
        <Button text="Save"
          type="Accept" />
        <Button type="Reject"
          text="Cancle" />
      </Toolbar>
    </footer>
  </Page>
</mvc:View>
