<mvc:View
    xmlns:tnt="sap.tnt"
    controllerName="ui5boilerplate.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page
        showHeader="true"
        title="Library Management System"
        titleAlignment="Center"
    >
        <GenericTile
            class="tile"
            header="Create Membership"
            frameType="TwoByHalf"
            id="create_membership"
            subheader="Library management system"
            press=".navToCreateMembership"
        >
            <TileContent>
                <ImageContent src="sap-icon://add-employee" />
            </TileContent>
        </GenericTile>
        <GenericTile
            class="tile"
            header="View Membership"
            frameType="TwoByHalf"
            id="view_membership"
            subheader="Library management system"
            press=".navToViewMembership"
        >
            <TileContent>
                <ImageContent src="sap-icon://company-view" />
            </TileContent>
        </GenericTile>
        <footer>
            <Toolbar>
                <Label text="Version 1.0" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
