<mvc:View
    xmlns:tnt="sap.tnt"
    controllerName="ui5boilerplate.controller.CreateMembership"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page
        showHeader="true"
        title="Create Membership"
        titleAlignment="Center"
        floatingFooter="false"
        titleLevel="Auto"
        showNavButton="true"
        navButtonPress=".navToHomePage"
    >
        <content>
            <FlexBox
                class='flexbox-margin'
                direction="Column"
            >
                <Label
                    text="Student ID"
                    design="Bold"
                    required="true"
                />
                <Input
                    type="Number"
                    width="350px"
                    id="student_id"
                />
            </FlexBox>
            <FlexBox
                class='flexbox-margin'
                direction="Column"
            >
                <!--SAP recommends not to use design BOLD with label, using for learning purpose-->
                <Label
                    text="Name"
                    labelFor="input_name"
                    design="Bold"
                    required="true"
                />
                <Input
                    maxLength="128"
                    type="Text"
                    width="350px"
                    required="true"
                    id="name"
                />
            </FlexBox>
            <FlexBox
                class='flexbox-margin'
                direction="Column"
            >
                <Label
                    text="{i18n>DATE_OF_BIRTH}"
                    design="Bold"
                    required="true"
                />
                <DatePicker
                    id="dob_picker"
                    width="350px"
                    required="true"
                />
            </FlexBox>
            <FlexBox
                class='flexbox-margin'
                direction="Column"
            >
                <Label
                    text="Mail ID"
                    design="Bold"
                    required="true"
                />
                <Input
                    type="Email"
                    width="350px"
                    required="true"
                    id="email"
                />
            </FlexBox>
            <FlexBox
                class='flexbox-margin'
                direction="Column"
            >
                <Label
                    text="Resident Type"
                    design="Bold"
                    required="true"
                />
                <RadioButtonGroup
                    fieldGroupIds="resident_type"
                    id="resident_type"
                >
                    <RadioButton
                        text="Hosteller"
                        groupName="resident_type"
                        selected="true"
                    />
                    <RadioButton
                        text="Non-Hosteller"
                        groupName="resident_type"
                    />
                </RadioButtonGroup>
            </FlexBox>
            <FlexBox
                class='flexbox-margin'
                direction="Column"
            >
                <Label
                    text="Interest"
                    design="Bold"
                    required="true"
                />
                <CheckBox
                    text="Fiction"
                    id="interest_1"
                />
                <CheckBox
                    text="Non-Fiction"
                    id="interest_2"
                />
            </FlexBox>
            <FlexBox
                class='flexbox-margin'
                direction="Column"
            >
                <Label
                    text="Course"
                    design="Bold"
                    required="true"
                />
                <ComboBox
                    items="{ path: 'courseModel>/bachelor_degrees'}"
                    required="true"
                    id="course"
                    width="350px"
                >
                    <!--Binding for named model, if model is not named then use "course" for relative path-->
                    <core:Item text="{courseModel>full_name}" />
                </ComboBox>
            </FlexBox>
        </content>
        <footer>
            <Toolbar>
                <!--added just for understanding-->
                <Button
                    text="Save"
                    type="Accept"
                    press=".saveMembership"
                />
                <Button
                    type="Reject"
                    text="Cancle"
                    press=".navToHomePage"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
